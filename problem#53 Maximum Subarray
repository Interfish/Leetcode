//tricky one with O(n)
class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int i,sum(0),base(0),result(nums[0]);
        for(i=0;i<nums.size();i++){
            sum += nums[i];
            if(sum-base>result)
                result = sum - base;
            if(sum<base)    base = sum;
        }
        return result;
    }
}; 
